@model Filme
@{
    ViewData["Title"] = "Excluir Filme";
    Layout = "_LayoutAdmin";
}

<style>
    button {
        border: none;
    }

    a {
        text-decoration: none;
    }

    form {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: auto;
    }


    .delete__title {
        font-family: 'Rubik', sans-serif;
        font-weight: 400;
        color: #fff;
        font-size: 28px;
        line-height: 100%;
        margin-bottom: 15px;
        text-align: center;
        display: block;
    }

    .delete__btns {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }

    .delete__btn--apply {
        background-color: #2f80ed;
        color: #e0e0e0;
    }

    .delete__btn--dismiss {
        background-color: #fff;
        color: #151f30;
    }

    .delete__btn {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 40px;
        width: calc(50% - 10px);
        border-radius: 16px;
        font-size: 14px;
        text-transform: uppercase;
        font-weight: 500;
    }

    [type="submit"],
    button {
        -webkit-appearance: button;
    }

    #delete {
        display: block;
        background-color: #151f30;
        margin: 40px auto;
        width: 100%;
        max-width: 420px;
        padding: 20px;
        border-radius: 16px;
        overflow: hidden;
    }

    .text-center {
        display: flex;
        justify-content: center;
        text-align: center;
        margin: auto;
    }
</style>

<div class="text-center">

    <form asp-action="Deletar">
        <div id="delete" class="zoom-anim-dialog delete">
            <h6 class="delete__title">Realmente deseja apagar o filme @Model.titulo?</h6>

            <div class="delete__btns">
                <button class="delete__btn delete__btn--apply" type="submit" asp-route-id="@Model.Id"
                    asp-controller="Filme" asp-action="Deletar">Deletar</button>
                <a role="submit" class="delete__btn delete__btn--dismiss" role="submit" class="btn btn-secondary"
                    asp-controller="Filme" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>

</div>