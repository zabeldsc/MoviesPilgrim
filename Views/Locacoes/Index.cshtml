@model IEnumerable<MoviesPilgrim.Models.ViewLocacoes>

@{
    ViewData["Title"] = "Locacoes";
    Layout = "_LayoutAdmin";
}

<link rel="stylesheet" href="../../css/Locacoes.css">


<section>
    <div class="head_section">
        <h2 style="color: white !important;">Locações</h2>
        <a asp-controller="Locacoes" asp-action="Criar" class="add_locacao">
            Nova Locação
            <iconify-icon icon="fluent:add-16-regular"></iconify-icon>
        </a>
    </div>
    <div class="table_area">
        <table class="table_locacoes">
            <thead class="head_table">
                <th class="cell_head">
                    ID
                </th>
                <th class="cell_head">
                    NOME CLIENTE
                </th>
                <th class="cell_head">
                    NOME FILME
                </th>
                <th class="cell_head">
                    DATA LOCAÇÃO
                </th>
                <th class="cell_head">
                    DATA LIMITE
                </th>
                <th class="cell_head">
                    STATUS
                </th>
                @* <th class="cell_head">
                    TOTAL(R$)
                </th> *@
                <th class="cell_head">
                    AÇÕES
                </th>
            </thead>
            <tbody class="body_table">
                @foreach (var locacao in Model){
                <tr class="row_table">
                    <td class="cell_table">
                        @Html.DisplayFor(modelItem => locacao.IdLocacao)
                    </td>
                    <td class="cell_table">
                        @Html.DisplayFor(modelItem => locacao.NomeCliente)
                    </td>
                    <td class="cell_table">
                         @Html.DisplayFor(modelItem => locacao.NomeFilme)
                    </td>
                    <td class="cell_table">
                         @Html.DisplayFor(modelItem => locacao.DataLocacao)
                    </td>
                    <td class="cell_table">
                         @Html.DisplayFor(modelItem => locacao.DataLimite)
                    </td>
                    <td class="cell_table">
                         @Html.DisplayFor(modelItem => locacao.Statuslocacao)
                    </td>
                    <td class="cell_table actions_cell">
                        <a class="edit_action" asp-route-id="" asp-controller="Locacoes" asp-action="Editar">
                            <iconify-icon icon="mi:edit"></iconify-icon>
                        </a>
                        <a class="delete_action" asp-route-id="" asp-controller="Locacoes" asp-action="VerificarDeletar">
                            <iconify-icon icon="ant-design:delete-outlined"></iconify-icon>
                        </a>
                    </td>
                </tr>
                }
                
            </tbody>
        </table>
    </div>
</section>